<%= form_with(model: @access_code, class: "space-y-8 divide-gray-200", id: "dataset-form") do |form| %>
  <div class="space-y-8 divide-y divide-gray-200 sm:space-y-5">
    <div class="space-y-6 sm:space-y-5">
      <% if @access_code.errors.any? %>
        <div id="error_explanation" class="bg-red-50 text-red-500 p-1 font-medium rounded-md mt-3">
          <ul>
            <%= render 'layouts/form_alert', errors: @access_code.errors %>
          </ul>
        </div>
      <% end %>
      <div class="space-y-6 pt-8 sm:space-y-5 sm:pt-10">
        <div>
          <h3 class="text-base font-semibold leading-6 text-gray-900">Basic Information</h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">Basic information about your dataset</p>
        </div>
        <div class="space-y-6 sm:space-y-5">
          <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
            <%= form.label :customer_email, class: "block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5" %>
            <div class="mt-2 sm:col-span-2 sm:mt-0">
              <%= form.text_field :customer_email, class: "block w-full max-w-lg rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>
          <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
            <%= form.label :dataset_id, class: "block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5" %>
            <div class="mt-2 sm:col-span-2 sm:mt-0">
              <%= form.collection_select :dataset_id, current_user.datasets, :id, :name, {:prompt=>true}, { class: "block w-full max-w-lg rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" } %>
            </div>
          </div>
        </div>
      </div>

      <div class="pt-5">
        <div class="flex gap-x-3 justify-between">
          <div class="">
            <% if @access_code.persisted? %>
              <%= button_to "Delete", access_codes_path, method: :delete, data: {"turbo-confirm": 'Are you sure you want to delete this dataset?'}, class: "rounded-md bg-white py-2 px-3 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
            <% end %>
          </div>
          <div class="flex gap-x-3">
            <%= link_to "Cancel", datasets_path, class: "rounded-md bg-white py-2 px-3 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
            <%= form.submit class: "inline-flex justify-center rounded-md btn-gradient py-2 px-3 text-sm font-semibold text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>