<%= form_with(model: dataset, class: "contents", id: "new-dataset-form") do |form| %>
  <% if dataset.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(dataset.errors.count, "error") %> prohibited this dataset from being saved:</h2>

      <ul>
        <% dataset.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :price %>
    <% if current_user.stripe_connected_account_success %>
      <%= form.number_field :price, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    <% else %>
      <p>Setup and connect your Stripe account to enable selling</p>
      <%= link_to "Visit your profile", user_path(current_user.id) %>
    <% end %>
  </div>

  <div class="my-5">
    <%= form.label :dataset_type %>
    <%= form.select :dataset_type, options_for_select(Dataset.dataset_types.map { |k,v| [k.humanize, k]}), {:prompt => "Select dataset type"}, {"v-on:change": "handleSelectChange"}%>
  </div>

  <div v-if="showURLField" class="my-5">
    <%= form.label :database_url %>
    <%= form.text_field :database_url, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div v-if="showFileField" class="my-5">
    <%= form.label :file %>
    <%= form.file_field :file, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

