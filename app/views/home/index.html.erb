<div>
  <% if current_user %>
    <%= link_to current_user.name, user_path %>
    <h3><%= current_user.email %></h3>
    <%= image_tag(current_user.image) unless current_user.image.nil? %>
    <%= button_to "Sign out", destroy_user_session_path, :method => :delete %>
    <%= render 'datasets/datasets_list' %>
  <% else %>
    <%=  button_to "Sign in with Google.", omniauth_authorize_path(:user, :google_oauth2), method: :post, data: { turbo: false }, class: "text-grey-700 font-semibold" %>
  <% end %>

</div>
